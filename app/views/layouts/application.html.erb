<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <nav>
    <ul>
    <% unless current_user.nil? %>
      <li><%= link_to "All GIFS", user_gifs_path(current_user) %></li>
      <li><%= link_to "Favorites", user_favorite_gifs_path(current_user) %></li>
      <li><%= link_to "Logout", logout_path, method: "delete" %></li>
      <li><%= link_to "Categories", admin_categories_path %></li>
    <% else %>
      <li><%= link_to "Log In", login_path, class: 'btn btn-default navbar-btn' %></li>
    <% end %>
  </ul>
</nav>
<% flash.each do |type, message| %>
  <%= content_tag :div, message, class: "alert alert-#{type}" %>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
